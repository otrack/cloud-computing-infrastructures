apiVersion: v1
kind: Pod
metadata:
  name: transactions-%ID%
  labels:
    app: "transactions"
    id: "%ID%"
spec:
  restartPolicy: Never
  containers:
  - name: server
    image: "%IMAGE%"
    imagePullPolicy: "%PULL_IMAGE%"
    resources:
      requests:
        cpu: 0.1
    env:
    - name: CASSANDRA_HOST
      value: "cassandra.default.svc.cluster.local"
    - name: CASSANDRA_PORT
      value: "9042"

